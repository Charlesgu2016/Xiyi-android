<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/register_btn"
            android:textColor="@color/font_middle_gray"
            android:textSize="36px" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:text="注册"
            android:textColor="@color/base_blue"
            android:textSize="32px" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="340px"
            android:layout_height="100px"
            android:background="@color/white"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:maxLines="1"
            android:numeric="integer"
            android:padding="10dp"
            android:textColorHint="@color/font_gray"
            android:textSize="36px" />

        <TextView
            android:id="@+id/login_check_pass"
            android:layout_width="220px"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            android:background="@color/font_gray"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="32px" />

    </LinearLayout>


    <EditText
        android:id="@+id/login_check_num"
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:hint="请输入验证码"
        android:paddingLeft="@dimen/normal_padding_space"
        android:singleLine="true"
        android:textColorHint="@color/font_gray"
        android:textSize="36px"
        tools:ignore="RtlSymmetry" />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="580px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:background="@color/base_blue"
        android:text="@string/register_btn"
        android:textColor="@color/white"
        android:textSize="36px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_info"
            android:textSize="22px"

            />

        <TextView
            android:id="@+id/login_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_agreement"
            android:textColor="@color/base_blue"
            android:textSize="22px" />

    </LinearLayout>


</LinearLayout>