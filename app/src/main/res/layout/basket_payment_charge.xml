<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/basket_title"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/font_middle_gray"
            android:textSize="36px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="16px"
        android:background="@color/white">

        <TextView
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:text="金额"
            android:textSize="32px" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入充值金额"
            android:textColorHint="@color/font_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <RelativeLayout
            android:layout_width="189px"
            android:layout_height="99px"
            android:layout_marginTop="48px"
            android:layout_marginRight="5px"
            android:background="@mipmap/basket_payment_charge_coupon1"
            >

            <TextView
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充200"
                android:textSize="20px"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_marginLeft="32px"
                android:layout_marginTop="36px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送50"
                android:textSize="52px"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_marginLeft="140px"
                android:layout_marginTop="65px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="20px"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="189px"
            android:layout_height="99px"
            android:layout_marginTop="48px"
            android:layout_marginRight="5px"

            android:background="@mipmap/basket_payment_charge_coupon2"
            >

            <TextView
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充500"
                android:textSize="20px"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_marginLeft="32px"
                android:layout_marginTop="36px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送150"
                android:textSize="52px"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_marginLeft="140px"
                android:layout_marginTop="65px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="20px"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="189px"
            android:layout_height="99px"
            android:layout_marginTop="48px"
            android:background="@mipmap/basket_payment_charge_coupon3"
            >

            <TextView
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充500"
                android:textSize="20px"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_marginLeft="32px"
                android:layout_marginTop="36px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送150"
                android:textSize="52px"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_marginLeft="140px"
                android:layout_marginTop="65px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="20px"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:layout_width="580px"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:layout_marginTop="70px"
        android:background="@color/font_gray" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="580px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="70px"
        android:background="@color/font_gray"
        android:text="支付宝充值"
        android:textColor="@color/white"
        android:textSize="32px" />

</LinearLayout>