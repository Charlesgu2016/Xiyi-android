<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="580px"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/home_add_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="40px"
        android:src="@mipmap/home_basket_frame" />

    <ImageView
        android:id="@+id/home_add_pic"
        android:layout_width="126px"
        android:layout_height="140px"
        android:layout_alignBottom="@+id/home_add_frame"
        android:layout_alignEnd="@+id/home_add_frame"
        android:layout_marginBottom="48px"
        android:layout_marginEnd="48px"
        android:src="@mipmap/home_basket_basket" />

    <LinearLayout
        android:id="@+id/home_add_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_add_frame"
        android:layout_marginTop="64px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_add_order_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_basket_minus_default" />

        <TextView
            android:id="@+id/home_add_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_basket_num_background"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/base_orange"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/home_add_order_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_basket_addnum_default" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="40px"
        android:layout_toRightOf="@id/home_add_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_add_typename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="袋洗"
            android:textSize="36px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_add_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥68"
                android:textColor="@color/base_orange"
                android:textSize="36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/袋"
                android:textSize="32px" />
        </LinearLayout>

        <TextView
            android:id="@+id/home_add_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46px"
            android:text="装多少! 洗多少!                    亲,皮衣、真丝内衣、袜子、鞋不要装哦!"
            android:textSize="24px" />

    </LinearLayout>

    <Button
        android:id="@+id/home_add_order_sumbit"
        android:layout_width="580px"
        android:layout_height="90px"
        android:layout_below="@id/home_add_num"
        android:layout_marginLeft="10px"
        android:layout_marginTop="50px"
        android:background="@mipmap/home_basket_addtobasket_default" />


</RelativeLayout>