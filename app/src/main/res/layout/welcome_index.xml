<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/bg_gray">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/fragment_select"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <RadioButton
            android:id="@+id/home_fragment"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="0px"
            android:drawableTop="@drawable/index_icon_home_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/index_font_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/basket_fragment"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="0px"
            android:drawableTop="@drawable/index_icon_basket_selector"
            android:gravity="center"
            android:paddingLeft="0px"
            android:text="洗衣篮"
            android:textColor="@drawable/index_font_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/my_fragment"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="0px"
            android:drawableTop="@drawable/index_icon_my_selector"
            android:gravity="center"
            android:paddingLeft="0px"
            android:text="我"
            android:textColor="@drawable/index_font_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/more_fragment"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="0px"
            android:drawableTop="@drawable/index_icon_more_selector"
            android:gravity="center"
            android:paddingLeft="0px"
            android:text="更多"
            android:textColor="@drawable/index_font_selector"
            android:textSize="12sp" />


    </RadioGroup>
</LinearLayout>