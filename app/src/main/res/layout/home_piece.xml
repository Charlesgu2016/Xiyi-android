<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/home_piece_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="件洗"
            android:textSize="36px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="1px"
        android:background="@color/bg_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_piece_spring"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="春/秋装"
            android:textColor="@color/font_middle_gray"
            android:textSize="32px" />

        <TextView
            android:id="@+id/home_piece_summer"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="夏装"
            android:textColor="@color/font_middle_gray"
            android:textSize="32px" />


        <TextView
            android:id="@+id/home_piece_winter"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="冬装"
            android:textColor="@color/font_middle_gray"
            android:textSize="32px" />

        <TextView
            android:id="@+id/home_piece_leather"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="皮衣"
            android:textColor="@color/font_middle_gray"
            android:textSize="32px" />

    </LinearLayout>

    <GridView
        android:id="@+id/piece_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#f4f4f4"
        android:gravity="center"
        android:horizontalSpacing="10px"
        android:numColumns="2"
        android:paddingTop="10px"
        android:verticalSpacing="10px" />

</LinearLayout>