<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/basket_title"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/more_feedback_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@color/font_middle_gray"
            android:textSize="@dimen/font_title_size" />
    </RelativeLayout>

    <EditText
        android:id="@+id/more_feedback_content"
        android:layout_width="580px"
        android:layout_height="400px"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:hint="请输入您的宝贵意见......"
        android:gravity="top"
        />

    <Button
        android:id="@+id/more_feedback_submit"
        android:layout_marginTop="80px"
        android:layout_width="580px"
        android:layout_height="90px"
        android:background="@color/base_blue"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="32px"/>

</LinearLayout>