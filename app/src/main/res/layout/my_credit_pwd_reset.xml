<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="重置密码"
            android:textColor="@color/font_middle_gray"
            android:textSize="36px" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_width="340px"
            android:layout_height="100px"
            android:background="@color/white"
            android:drawableLeft="@mipmap/my_phone_blue_icon"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:maxLines="1"
            android:numeric="integer"
            android:drawablePadding="10px"
            android:padding="10dp"
            android:textColorHint="@color/font_gray"
            android:textSize="36px" />

        <TextView
            android:layout_width="220px"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            android:background="@color/font_gray"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="36px" />

    </LinearLayout>


    <EditText
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:hint="请输入验证码"
        android:paddingLeft="@dimen/normal_padding_space"
        android:singleLine="true"
        android:textColorHint="@color/font_gray"
        android:textSize="36px"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:text="重置密码"
        android:textSize="32px" />

    <EditText
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:drawableLeft="@mipmap/my_pwd"
        android:drawablePadding="10px"
        android:hint="请输入重置密码"
        android:paddingLeft="@dimen/normal_padding_space"
        android:singleLine="true"
        android:textColorHint="@color/font_gray"
        android:textSize="36px"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:drawableLeft="@mipmap/my_pwd"
        android:drawablePadding="10px"
        android:hint="请再次输入重置密码"
        android:paddingLeft="@dimen/normal_padding_space"
        android:singleLine="true"
        android:textColorHint="@color/font_gray"
        android:textSize="36px"
        tools:ignore="RtlSymmetry" />

    <Button
        android:layout_width="580px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:background="@color/base_blue"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="36px" />


</LinearLayout>