<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/basket_title"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/font_middle_gray"
            android:textSize="36px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:layout_marginTop="16px">

        <RadioGroup
            android:id="@+id/payment_selector"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/basket_payment_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="余额支付"

                android:textColor="@drawable/basket_userinfo_font_selector"
                android:textSize="32px" />

            <RadioButton
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/basket_payment_selector"
                android:button="@null"
                android:gravity="center"
                android:text="支付宝支付"
                android:textColor="@drawable/basket_userinfo_font_selector"
                android:textSize="32px" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/payment_selector"
            android:background="@mipmap/background_lightred_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28px"
                android:layout_marginTop="20px"
                android:text="快快洗余额(元)"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28px"
                android:layout_marginTop="110px"
                android:text="480.00"
                android:textColor="@color/white"
                android:textSize="72px" />

            <Button
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@mipmap/background_red_selector"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="32px" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginTop="70px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36px"
            android:text="请输入支付密码"
            android:textSize="32px" />
        <!--输入密码-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pay_edit1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/bg_gray"
                    android:cursorVisible="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:paddingLeft="25dp"
                    android:password="true" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <EditText
                    android:id="@+id/pay_edit2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/bg_gray"
                    android:cursorVisible="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:paddingLeft="25dp"
                    android:password="true" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <EditText
                    android:id="@+id/pay_edit3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/bg_gray"
                    android:cursorVisible="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:paddingLeft="25dp"
                    android:password="true" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <EditText
                    android:id="@+id/pay_edit4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/bg_gray"
                    android:cursorVisible="false"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:paddingLeft="25dp"
                    android:password="true" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/pay_Rl"
                android:layout_width="match_parent"
                android:layout_height="80dp"></RelativeLayout>
        </FrameLayout>

        <Button
            android:layout_width="530px"
            android:layout_height="90px"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="280px"
            android:background="@color/base_blue"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="36px" />

    </RelativeLayout>

    <Button
        android:layout_width="230px"
        android:layout_height="50px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@color/bg_gray"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="重制支付密码"
        android:textSize="24px" />
</LinearLayout>