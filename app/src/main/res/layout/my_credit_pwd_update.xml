<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/basket_title"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/font_middle_gray"
            android:textSize="36px" />

    </RelativeLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:text="旧密码"
        android:textSize="32px" />

    <EditText
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:layout_width="580px"
        android:layout_height="100px"
        android:background="@color/white"
        android:hint="请输入旧密码"
        android:gravity="center_vertical"
        android:paddingLeft="48px"
        android:textSize="36px"
        android:drawableLeft="@mipmap/my_pwd"
        android:drawablePadding="20px"
        android:paddingEnd="30px"
        android:textColorHint="@color/font_gray"
        />

    <TextView
    android:layout_gravity="center"
    android:layout_width="580px"
    android:layout_height="wrap_content"
    android:layout_marginTop="40px"
    android:text="新密码"
    android:textSize="32px" />

    <EditText
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:layout_width="580px"
        android:layout_height="100px"
        android:background="@color/white"
        android:hint="请输入新密码"
        android:gravity="center_vertical"
        android:paddingLeft="48px"
        android:textSize="36px"
        android:drawableLeft="@mipmap/my_pwd"
        android:drawablePadding="20px"
        android:paddingEnd="30px"
        android:textColorHint="@color/font_gray"
        />

    <EditText
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:layout_width="580px"
        android:layout_height="100px"
        android:background="@color/white"
        android:hint="请再次输入新密码"
        android:gravity="center_vertical"
        android:paddingLeft="48px"
        android:textSize="36px"
        android:drawableLeft="@mipmap/my_pwd"
        android:drawablePadding="20px"
        android:paddingEnd="30px"
        android:textColorHint="@color/font_gray"
        android:id="@+id/editText2" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="580px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:background="@color/base_blue"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="36px" />
</LinearLayout>