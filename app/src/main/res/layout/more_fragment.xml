<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/basket_title"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/more_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/font_middle_gray"
            android:textSize="36px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_customservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingTop="1px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@mipmap/more_service_icon"
            android:drawablePadding="18px"
            android:gravity="center_vertical"
            android:text="联系客服"
            android:textSize="40px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_enter"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingTop="1px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@mipmap/more_question_icon"
            android:drawablePadding="18px"
            android:gravity="center_vertical"
            android:text="常见问题"
            android:textSize="40px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_enter"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingTop="1px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@mipmap/more_scope_icon"
            android:drawablePadding="18px"
            android:gravity="center_vertical"
            android:text="服务范围"
            android:textSize="40px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_enter"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingTop="1px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@mipmap/more_about_icon"
            android:drawablePadding="18px"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textSize="40px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_enter"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingTop="1px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@mipmap/more_agreement_icon"
            android:drawablePadding="18px"
            android:gravity="center_vertical"
            android:text="用户协议"
            android:textSize="40px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_enter"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingTop="1px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:drawableLeft="@mipmap/more_feedback_icon"
            android:drawablePadding="18px"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textSize="40px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_enter"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

    </RelativeLayout>

</LinearLayout>