<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/basket_title"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="优惠码分享"
            android:textColor="@color/font_middle_gray"
            android:textSize="36px" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/my_coupon_share_logo"
        android:layout_gravity="center"
        android:layout_marginTop="36px"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:text="获得优惠洗衣"
        android:layout_marginTop="30px"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:text="向朋友分享洗衣优惠码,朋友在该
        平台首次使用你的优惠码消费后,您将也获得相
        应金额的洗衣券。"
        android:layout_marginTop="20px"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:text="优惠码"
        android:layout_marginTop="60px"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:text="S19J6Q"
        android:textColor="@color/base_orange"
        android:layout_marginTop="20px"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:layout_width="580px"
        android:layout_height="326px"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:background="@color/light_blue"
        >


        <!--my_coupon_share_weibo/weixin/pyq/....-->
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <Button
        android:layout_width="580px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:text="取消"
        android:textSize="32px" />
</LinearLayout>