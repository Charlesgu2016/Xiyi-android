<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/basket_title"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/my_credit_pwd_mgt_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30px"
            android:src="@mipmap/title_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="洗衣币密码管理"
            android:textColor="@color/font_middle_gray"
            android:textSize="36px" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="40px"
        android:text="洗衣币密码"
        android:textSize="32px" />


    <TextView
        android:id="@+id/my_credit_pwd_update"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:text="修改账户密码"
        android:gravity="center_vertical"
        android:paddingLeft="48px"
        android:textSize="36px"
        android:drawableRight="@mipmap/arrow_enter"
        android:paddingEnd="30px"
        />

    <TextView
        android:id="@+id/my_credit_pwd_reset"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:text="重置账户密码"
        android:gravity="center_vertical"
        android:paddingLeft="48px"
        android:textSize="36px"
        android:drawableRight="@mipmap/arrow_enter"
        android:paddingEnd="30px"
        />


    <Button
        android:id="@+id/my_credit_pwd_cancel"
        android:layout_width="580px"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:background="@mipmap/background_lightred_selector"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="32px" />

</LinearLayout>